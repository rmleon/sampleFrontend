doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
        //- vendor:css
        //- endinject
        //- bundle:css
        //- endinject
    body(ng-app="trades" layout="column" ng-cloak)
        md-toolbar(layout='row')
            md-button.menu(hide-gt-sm='', ng-click='ul.toggleList()', aria-label='Show User List')
                md-icon(md-svg-icon='menu')
            |
            h1 Trades
            |
            div(flex='', layout='row')
                md-sidenav.md-whiteframe-z2(ng-click='ul.toggleList()', md-is-locked-open="$mdMedia('gt-sm')", md-component-id='left')
                    md-list
                        md-list-item(ng-repeat='it in ul.users')
                            md-button(ng-click='ul.selectUser(it)', ng-class="{'selected' : it === ul.selected }")
                                md-icon.avatar(md-svg-icon='{{it.avatar}}')
                                |                   {{it.name}}
                |
                md-content#content(flex='')
                    md-icon.avatar(md-svg-icon='{{ul.selected.avatar}}')
                    |
                    h2 {{ul.selected.name}}
                    |
                    p {{ul.selected.content}}
                    |
                    md-button.share(md-no-ink='', ng-click='ul.makeContact(ul.selected)', aria-label='Share with {{ ul.selected.name }}')
                        md-icon(md-svg-icon='share')

        //- vendor:js
        //- endinject
        //- bundle:js
        //- endinject
